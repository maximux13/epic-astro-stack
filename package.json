{
  "name": "epic-astro-stack",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.14.2",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint --ext .astro,.js,.ts src",
    "check": "astro check",
    "format": "prettier --write \"src/**/*.{astro,js,ts}\"",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:e2e": "npm run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "CI=true playwright test",
    "test:e2e:install": "npx playwright install --with-deps chromium firefox webkit"
  },
  "dependencies": {
    "@astrojs/check": "^0.7.0",
    "@iconify-json/radix-icons": "^1.1.14",
    "@sentry/astro": "^7.98.0",
    "@spotlightjs/astro": "^1.0.11",
    "astro": "^4.11.3",
    "astro-capo": "^0.0.1",
    "astro-font": "^0.0.77",
    "astro-icon": "^1.0.3",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.0",
    "astro-sitemap": "^1.0.0",
    "astro-webmanifest": "^1.0.0",
    "astrojs-service-worker": "^2.0.0",
    "dotenv": "^16.4.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "@playwright/test": "^1.41.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.11.13",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@unpic/pixels": "^1.2.1",
    "@unpic/placeholder": "^0.1.2",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "blurhash": "^2.0.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.3",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.4",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "vitest": "^1.6.0",
    "vitest-dom": "^0.1.1"
  }
}
